{
  "name": "npm-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:sass": "sass assets/sass:assets/sasstemp --style=expanded --no-source-map",
    "css:postcss": "postcss assets/sasstemp --base assets/sasstemp --dir dist/assets/css/",
    "css": "npm-run-all -s css:*",
    "js:babel": "./node_modules/.bin/babel assets/js --out-dir assets/jstemp",
    "js:uglifyjs": "find assets/jstemp/*.js -type f -exec basename {} .js \\; | xargs -I '{}' uglifyjs --compress --mangle --output dist/assets/js/{}.min.js -- assets/jstemp/{}.js",
    "js": "npm-run-all -s js:*",
    "watch:pug2html": "pug assets/pug/ --hierarchy -o dist/ -w -P",
    "watch:server": "browser-sync start --server dist --files 'dist, **/*.html, !node_modules/**/*'",
    "watch:css": "watch 'npm run css' ./assets/sass",
    "watch:js": "watch 'npm run js' ./assets/js",
    "watch": "npm-run-all -p watch:*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.11",
    "cssnano": "^5.1.14",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "pug-cli": "github:pugjs/pug-cli#master",
    "uglify-js": "^3.17.4",
    "watch": "^1.0.2"
  },
  "browserslist": [
    ">0.25% in JP",
    "not ie <= 10",
    "not op_mini all"
  ]
}
